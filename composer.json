{
  "name": "async-bot/core",
  "description": "Shared code for the Async Bot project",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Pieter Hordijk",
      "email": "info@pieterhordijk.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.4",
    "ext-dom": "*",
    "amphp/amp": "^2.2.0",
    "amphp/byte-stream": "^1.6",
    "amphp/file": "^1.0",
    "amphp/http-client": "dev-master",
    "amphp/log": "^1.0",
    "daverandom/exceptional-json": "^1.0",
    "monolog/monolog": "^1.24",
    "opis/json-schema": "^1.0",
    "psr/log": "^1.1",
    "room11/dom-utils": "^1.1"
  },
  "require-dev": {
    "infection/infection": "^0.13.4",
    "maglnet/composer-require-checker": "^2.0",
    "phpunit/phpunit": "^8.3",
    "slevomat/coding-standard": "^5.0.4",
    "squizlabs/php_codesniffer": "^3.4.2"
  },
  "autoload": {
    "psr-4": {
      "AsyncBot\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AsyncBot\\CoreTest\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  }
}
